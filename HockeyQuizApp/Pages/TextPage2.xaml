<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HockeyQuizApp.Pages.TextPage2"
             BackgroundColor="#0D47A1"
             Title="Chapitre 2">
    <ScrollView>

        <VerticalStackLayout Padding="20" Spacing="20">

            <Image 
                Source="rules_hockey.png" 
                HeightRequest="180" 
                Aspect="AspectFit"
                HorizontalOptions="Center"/>

            <Label 
                Text="Les Règles"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="#E3F2FD"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>

            <Label 
                Text="Un match de hockey se joue en trois périodes de 20 minutes. Chaque équipe a 6 joueurs sur la glace : 1 gardien et 5 joueurs. Le but est de marquer en envoyant la rondelle dans le filet adverse."
                FontSize="16"
                TextColor="#E3F2FD"
                LineBreakMode="WordWrap"/>

            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button 
                    Text="Précédent"
                    Clicked="Back_Clicked"
                    BackgroundColor="#03A9F4"
                    TextColor="White"
                    CornerRadius="25"
                    Padding="15"
                    WidthRequest="120"/>

                <Button 
                    Text="Suivant"
                    Clicked="Next_Clicked"
                    BackgroundColor="#FFC107"
                    TextColor="Black"
                    CornerRadius="25"
                    Padding="15"
                    WidthRequest="120"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>