<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HockeyQuizApp.Pages.QuizPage"
             BackgroundColor="#0D47A1"
             Title="Quiz Hockey">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label x:Name="CategoryLabel"
                   FontAttributes="Bold"
                   FontSize="16"
                   TextColor="Yellow"
                   HorizontalOptions="Center"/>

            <Label x:Name="QuestionNumberLabel"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalOptions="Center"
                   TextColor="#E3F2FD"/>

            <Label x:Name="ScoreLabel"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="White"/>

            <ProgressBar x:Name="QuizProgressBar"
                         Progress="0"
                         HeightRequest="10"
                         BackgroundColor="White"/>

            <Label x:Name="TimerLabel"
                   FontSize="16"
                   TextColor="Orange"
                   HorizontalOptions="Center"/>

            <Image x:Name="QuestionImage"
                   HeightRequest="200"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"/>

            <Label x:Name="QuestionLabel"
                   FontSize="18"
                   TextColor="#E3F2FD"
                   LineBreakMode="WordWrap"
                   HorizontalOptions="Center"/>

            <VerticalStackLayout Spacing="15">
                <Button x:Name="Option1Button" Clicked="Answer_Clicked"/>
                <Button x:Name="Option2Button" Clicked="Answer_Clicked"/>
                <Button x:Name="Option3Button" Clicked="Answer_Clicked"/>
                <Button x:Name="Option4Button" Clicked="Answer_Clicked"/>
            </VerticalStackLayout>

            <Label x:Name="FeedbackLabel"
                   FontAttributes="Bold"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="White"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>