<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HockeyQuizApp.Pages.TextPage4"
             BackgroundColor="#0D47A1"
             Title="Chapitre 4">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

        <Image 
                Source="nhl_logo.png" 
                HeightRequest="180" 
                Aspect="AspectFit"
                HorizontalOptions="Center"/>

        <Label 
                Text="La NHL"
                FontSize="28"
                FontAttributes="Bold"
                TextColor="#E3F2FD"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>

        <Label 
                Text="La Ligue Nationale de Hockey (NHL) est composée d’équipes du Canada et des États-Unis.\n\nLes séries éliminatoires déterminent le champion qui gagne la Coupe Stanley."
                FontSize="16"
                TextColor="#E3F2FD"
                LineBreakMode="WordWrap"/>

        <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
            <Button 
                    Text="Précédent"
                    Clicked="Back_Clicked"
                    BackgroundColor="#03A9F4"
                    TextColor="White"
                    CornerRadius="25"
                    Padding="15"
                    WidthRequest="120"/>

            <Button 
                    Text="Commencer le Quiz"
                    Clicked="StartQuiz_Clicked"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="25"
                    Padding="15"
                    WidthRequest="160"/>
        </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>